{% extends 'base.html.twig' %}

{% block body %}
    <h1>Regions list</h1>

    <table>
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Idregion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td><a href="{{ path('region_show', { 'idRegion': region.idRegion }) }}">{{ region.codigo }}</a></td>
                <td>{{ region.nombre }}</td>
                <td>{{ region.idRegion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('region_show', { 'idRegion': region.idRegion }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('region_edit', { 'idRegion': region.idRegion }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('region_new') }}">Create a new region</a>
        </li>
    </ul>
{% endblock %}
