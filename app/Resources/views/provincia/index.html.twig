{% extends 'base.html.twig' %}

{% block body %}
    <h1>Provincias list</h1>

    <table>
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Idprovincia</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provincium in provincias %}
            <tr>
                <td><a href="{{ path('provincia_show', { 'idProvincia': provincium.idProvincia }) }}">{{ provincium.codigo }}</a></td>
                <td>{{ provincium.nombre }}</td>
                <td>{{ provincium.idProvincia }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('provincia_show', { 'idProvincia': provincium.idProvincia }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('provincia_edit', { 'idProvincia': provincium.idProvincia }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('provincia_new') }}">Create a new provincium</a>
        </li>
    </ul>
{% endblock %}
