{% extends 'base.html.twig' %}

{% block body %}
    <h1>Conductum</h1>

    <table>
        <tbody>
            <tr>
                <th>Caracteristica</th>
                <td>{{ conductum.caracteristica }}</td>
            </tr>
            <tr>
                <th>Cumple</th>
                <td>{% if conductum.cumple %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Idconducta</th>
                <td>{{ conductum.idConducta }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conducta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conducta_edit', { 'idConducta': conductum.idConducta }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
